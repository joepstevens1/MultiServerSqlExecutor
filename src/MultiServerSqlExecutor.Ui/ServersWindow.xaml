<Window x:Class="MultiServerSqlExecutor.Ui.ServersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Servers" Height="450" Width="720" MinWidth="600" MinHeight="380" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <!-- Input area with labels laid out in a responsive grid -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Row 0: Name + Server -->
            <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtName" Grid.Column="1" Margin="0,0,12,6" />

            <TextBlock Text="Server:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtServer" Grid.Column="3" Margin="0,0,0,6" ToolTip="server.database.windows.net" />

            <!-- Row 1: Database + Username -->
            <TextBlock Text="Database:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtDatabase" Grid.Column="1" Grid.Row="1" Margin="0,0,12,6" />

            <TextBlock Text="Username:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtUser" Grid.Column="3" Grid.Row="1" Margin="0,0,0,6" />

            <!-- Row 2: Password + Add button -->
            <TextBlock Text="Password:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,6,0" />
            <PasswordBox x:Name="TxtPass" Grid.Column="1" Grid.Row="2" Margin="0,0,12,0" />

            <StackPanel Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnSave" Content="Save" Click="OnSaveServer" MinWidth="90" Margin="0,0,10,0" />
                <Button x:Name="BtnClear" Content="Clear" Click="OnClearFields" MinWidth="90" />
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox x:Name="ServersList" Grid.Row="0" DisplayMemberPath="Name" SelectionChanged="OnSelectionChanged" />
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Remove Selected" Click="OnRemoveServer" Margin="0,0,10,0" />
                <Button Content="Close" Click="OnClose" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
