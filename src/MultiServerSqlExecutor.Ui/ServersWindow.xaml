<Window x:Class="MultiServerSqlExecutor.Ui.ServersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Servers" Height="450" Width="720" MinWidth="600" MinHeight="380" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <!-- Input area with labels laid out in a responsive grid -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Row 0: Auth Type -->
            <TextBlock Text="Auth Type:" VerticalAlignment="Center" Margin="0,0,6,6" />
            <ComboBox x:Name="CboAuthType" Grid.Column="1" Margin="0,0,12,6" SelectionChanged="OnAuthTypeChanged">
                <ComboBoxItem Content="SQL Password" Tag="SqlPassword" IsSelected="True" />
                <ComboBoxItem Content="Azure MFA" Tag="AzureMfa" />
                <ComboBoxItem Content="Azure Password" Tag="AzurePassword" />
                <ComboBoxItem Content="Azure Interactive" Tag="AzureInteractive" />
            </ComboBox>

            <!-- Row 1: Name (Full Width) -->
            <TextBlock Text="Name:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtName" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,6" />

            <!-- Row 2: Server + Database -->
            <TextBlock Text="Server:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtServer" Grid.Column="1" Grid.Row="2" Margin="0,0,12,6" ToolTip="server.database.windows.net" />

            <TextBlock Text="Database:" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtDatabase" Grid.Column="3" Grid.Row="2" Margin="0,0,0,6" />

            <!-- Row 3: Username + Password -->
            <TextBlock x:Name="LblUser" Text="Username:" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,6,6" />
            <TextBox x:Name="TxtUser" Grid.Column="1" Grid.Row="3" Margin="0,0,12,6" />

            <TextBlock x:Name="LblPass" Text="Password:" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,6,6" />
            <PasswordBox x:Name="TxtPass" Grid.Column="3" Grid.Row="3" Margin="0,0,0,6" />

            <!-- Row 4: Save/Clear buttons -->
            <StackPanel Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnSave" Content="Save" Click="OnSaveServer" MinWidth="90" Margin="0,0,10,0" />
                <Button x:Name="BtnClear" Content="Clear" Click="OnClearFields" MinWidth="90" />
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox x:Name="ServersList" Grid.Row="0" SelectionChanged="OnSelectionChanged" AlternationCount="2">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F0F0F0" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            <Button Grid.Column="1" Content="X" Foreground="Red" FontWeight="Bold" Click="OnRemoveServer" Margin="10,0,0,0" Padding="5,0" Tag="{Binding}" ToolTip="Remove Server" Background="Transparent" BorderThickness="0" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Close" Click="OnClose" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
