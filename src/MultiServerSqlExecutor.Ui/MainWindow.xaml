<Window x:Class="MultiServerSqlExecutor.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:MultiServerSqlExecutor.Ui"
        mc:Ignorable="d"
        Title="Multi-Server SQL Executor" Height="600" Width="900">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.RunCommand}" Executed="OnRun" />
    </Window.CommandBindings>
    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Servers..." Click="OnOpenServers" />
                <Separator />
                <MenuItem x:Name="MenuSave" Header="_Save Combined CSV" Click="OnSaveCombined" />
                <Separator />
                <MenuItem Header="E_xit" Click="OnExit" />
            </MenuItem>
            <MenuItem Header="_Run">
                <MenuItem x:Name="MenuRun" Header="_Run Query" Command="{x:Static local:MainWindow.RunCommand}" />
            </MenuItem>
        </Menu>

        <!-- Main content area with resizable query/results -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Query editor -->
            <GroupBox Header="SQL Query" Grid.Row="0">
                <avalonedit:TextEditor x:Name="QueryEditor" ShowLineNumbers="True" FontFamily="Consolas" FontSize="14" SyntaxHighlighting="SQL"/>
            </GroupBox>

            <!-- Splitter with horizontal handle -->
            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#FFC8C8C8" />

            <!-- Results -->
            <GroupBox Header="Results" Grid.Row="2">
                <DataGrid x:Name="ResultsGrid" AutoGenerateColumns="True" IsReadOnly="True" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
